<div class="container">
  <div class="mt-4 w-50 mx-auto">
    <div class="border-bottom mb-3">
      <h2>ログイン</h2>
    </div>
    
    <%= form_with model: @user, url: user_session_path do |f| %>
    
      <div class="field mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="field mb-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    
      <div class="actions">
        <%= f.submit  "ログイン", class: "btn btn-primary mb-2 w-25" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>