<div class="container mt-5">
  <div class="w-50 mx-auto">
    <%= form_with model: @plan, local: true do |f| %>
      <h3>編集フォーム</h3>
      <!-- ユーザ入力用テキストエリア -->
      <div class="form-group border-top pt-4">
        <%= f.label '企画名' %>
        <%= f.text_field :plan_name, class: "form-control", style: "width: 94%" %>
      </div>
      <div class="form-group">
        <%= f.label '出発日' %><br>
        <%= f.date_select :start_day, {}, {class: 'form-control', style: 'display: inline-block; width: auto;'} %>
      </div>
      <div class="form-group">
        <%= f.label '帰着日' %><br>
        <%= f.date_select :end_day, {}, {class: 'form-control', style: 'display: inline-block; width: auto;'} %>
      </div>
      <div class="form-group">
        <%= f.label '集合場所' %>
        <%= f.text_field :meeting_place, class: "form-control", style: "width: 94%" %>
      </div>
      <div class="form-group">
        <%= f.label '集合時間' %>
        <%= f.text_field :meeting_time, class: "form-control", style: "width: 94%" %>
      </div>
      <div class="form-group">
        <%= f.label '企画内容' %>
        <%= f.text_area :memo, rows: "3", class: "form-control", style: "width: 94%" %>
      </div>
      <div class="form-group border-bottom pb-4">
        <%= f.label "企画サムネイル" %>
        <%= f.file_field :image, accept: "image/*", class: "form-control-file" %>
      </div>
      <div class="text-left mt-4 mb-5">
        <%= f.submit "更新", class: "btn btn-outline-success mr-2", style: "width: 45%" %>
        <%= link_to "削除", plan_path(@plan.id), method: :delete, class: "btn btn-outline-danger ml-2", style: "width: 45%", "data-confirm" => "本当に削除しますか？" %>
      </div>
    <% end %>
  </div>
</div>