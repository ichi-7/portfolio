<div class="mx-auto mt-5 mb-4">
  <h2 class="kiwi-kaku font-weight-bold" style= "color: #5c9291; letter-spacing: 0.12em;"><i class="fas fa-map-marker-alt"></i> <%= @spot_name %></h2>
</div>

<div class="card-list-container mx-auto d-flex flex-wrap border-top border-bottom pb-4 pt-4" style="width: 85%">
  <% @posts.each do |pos| %>
  <div class="card mx-auto mt-3 border-0" style="width: calc(100% / 4); background-color:rgba(0,0,0,0)">
    <div class="card-body mx-auto">
      <div class="row d-flex justify-content-center">
        <% if pos.image.attached? %>
          <%= image_tag pos.image, class: "rounded mb-3", style: "max-width: 18vw; height: 18vw; object-fit: cover" %>
        <% else %>
          <%= image_tag asset_path('noimage.jpg'), class: "rounded mb-3", style: "max-width: 100%; height: 18vw; object-fit: cover" %>
        <% end %>
      </div>
      <div class="row px-2">
        <div class="w-100">
          <span class="font-weight-bold"><%= pos.created_at.strftime("%Y.%m.%d") %></span>
          <div class="my-1">
            <span class="h5 font-weight-bold"><%= link_to pos.title, post_path(pos), style: "color: #5c9291" %></span>
          </div>
          <div class="w-100">
            <span><i class="far fa-user"></i> <%= link_to pos.user.name, user_path(pos.user.id) %></span> | 
            <span class="card-title"><i class="fas fa-map-marker-alt"></i> <%= pos.spot.name %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= paginate @posts %>
</div>
<div class="d-flex justify-content-center mb-4 py-5">
  <span class="h5 font-weight-bold" style="color: #5c9291; color: #5c9291;"><i class="fas fa-map-marker-alt"></i> <%= link_to "マップに戻る", maps_path, style: "color: #5c9291; color: #5c9291; letter-spacing: 0.12em" %></span>
</div>